#!/bin/sh
#
# ufetch-arch - tiny system info for arch

## INFO

os="$(cat /etc/os-release | grep PRETTY_NAME | sed -e 's/PRETTY_NAME=//' -e 's/"//g')"
kernel="$(uname -sr | sed -e 's/-zen$//')"
uptime="$(uptime -p | sed 's/up //')"
packages="$(pacman -Q | wc -l)"
shell="$(basename "${SHELL}")"

#ui
if [ "$DESKTOP_SESSION" != "" ]; then
    ui="$DESKTOP_SESSION"
elif [ "$XDG_CURRENT_DESKTOP" != "" ]; then
    ui="$XDG_CURRENT_DESKTOP"
else
    ui="UNKNOWN"
fi
ui="$(basename "${ui}")"

#memory
memfree="$(free -h | grep Mem | awk '{print $3}')"
memtotal="$(free -h | grep Mem | awk '{print $2}')"
mem="$(echo "${memfree}/${memtotal}")"

## DEFINE COLORS
# probably don't change these
if [ -x "$(command -v tput)" ]; then
	bold="$(tput bold)"
	black="$(tput setaf 0)"
	red="$(tput setaf 1)"
	green="$(tput setaf 2)"
	yellow="$(tput setaf 3)"
	blue="$(tput setaf 4)"
	magenta="$(tput setaf 5)"
	cyan="$(tput setaf 6)"
	white="$(tput setaf 7)"
	reset="$(tput sgr0)"
fi

# you can change these
lc="${reset}${bold}${cyan}"         # labels
nc="${reset}${bold}${blue}"         # user and hostname
ic="${reset}"                       # info
c0="${reset}${cyan}"                # first color

## OUTPUT

cat <<EOF

${c0}         .         ${nc}${USER}${ic}@${nc}${HOSTNAME}${reset}
${c0}        / \\        ${lc}OS:        ${ic}${os}${reset}
${c0}       /   \\       ${lc}KERNEL:    ${ic}${kernel}${reset}
${c0}      /^.   \\      ${lc}UPTIME:    ${ic}${uptime}${reset}
${c0}     /  .-.  \\     ${lc}PACKAGES:  ${ic}${packages}${reset}
${c0}    /  (   ) _\\    ${lc}SHELL:     ${ic}${shell}${reset}
${c0}   / _.~   ~._^\\   ${lc}DE/WM:     ${ic}${ui}${reset}
${c0}  /.^         ^.\\  ${lc}MEMORY:    ${ic}${mem}${reset}

EOF
