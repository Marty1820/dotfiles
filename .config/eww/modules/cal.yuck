(defpoll MONTH :interval "5h" "date +\"%B\"")

;; ** Calendar PopOut **

(defwidget cal []
  (box
    :class "cal-box"
    :orientation "v"
    (box
      :orientation "v"
      :class "cal-inner-box"
      :space-evenly "false"
      (calendar
        :class "cal"
        :day "day"
        :month "month"
        :show-details "false"
        :show-heading "true"
        :show-day-names "true"
      )
    )
  )
)

(defwidget calbox []
  (box
    :orientation "v"
    :width 200
    :vexpand "true"
    :space-evenly "false"
    :class "calouterbox"
    (cal)
  )
)

(defwindow calbox
  :monitor 0
  :wm-ignore "true"
  :windowtype "dialog"
  :exclusive "false"
  :focusable "false"
  :stacking "overlay"
  :geometry (geometry
    :x "0%"
    :y "5px"
    :anchor "right bottom")
  (calbox)
)

;; Closer
(defwindow calbox-closer
  :monitor 0
  :focusable "false"
  :stacking "fg"
  :geometry (geometry
              :width "100%"
              :height "100%")
  (closer
    :window "calbox"
  )
)
